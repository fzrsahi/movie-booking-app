generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  birth     String
  hash      String
  age       Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  balance   Balance?

  @@map("Users")
}

model Balance {
  id      String @id @default(uuid())
  balance Int
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique
}

model Movie {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  price       Int
  releaseDate String
  ageRating   Int
  poster      String

  // @@map("Movies")
}
